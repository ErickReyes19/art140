<%- include("templates/header.template.ejs", {titulo: "Agregar Estudiante" }) %>
    <%- include("templates/nav.template.ejs") %>


        <div class="container">
            <h1 class="mt-4">Agregar Estudiante</h1>
            <form action="/estudiante" method="POST">
                <div class="form-group">
                    <label for="numeroCuenta">Número de Cuenta:</label>
                    <input type="text" class="form-control" id="numeroCuenta" name="numeroCuenta" required>
                </div>

                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" required>
                </div>

                <label for="huella">Huella:</label>
                <div class="form-group d-flex">
                    <button type="submit" class="btn btn-secondary mr-2"  data-toggle="modal"
                        data-target="#capturarHuellaModal">Capturar Huella</button>
                </div>

            </form>
        </div>

        <!-- Modal para capturar huella -->
        <div class="modal fade" id="capturarHuellaModal" tabindex="-1" role="dialog"
            aria-labelledby="capturarHuellaModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="capturarHuellaModalLabel">Coloque su huella</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Aquí puedes agregar el contenido del modal, por ejemplo, un mensaje o un campo para capturar la huella -->
                        <p>¡Coloque su huella aquí!</p>
                        <p id="contador">Tiempo restante: 10 segundos</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary">Guardar Huella</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agrega esto en tu archivo HTML, preferiblemente al final del body -->

<script>
    // Función para actualizar el contador en el modal
    function actualizarContador(segundos) {
        document.getElementById('contador').innerText = `Tiempo restante: ${segundos} segundos`;
    }

    // Función para cerrar el modal después de que se agote el tiempo
    function cerrarModalDespuesDeTiempo(modalId, tiempo) {
        let segundos = tiempo;

        const intervalo = setInterval(() => {
            if (segundos <= 0) {
                clearInterval(intervalo);
                $('#' + modalId).modal('hide');
            } else {
                actualizarContador(segundos);
                segundos--;
            }
        }, 1000);
    }

    // Llamar a la función para cerrar el modal después de 10 segundos
    $(document).ready(function() {
        cerrarModalDespuesDeTiempo('capturarHuellaModal', 10);
    });
</script>





